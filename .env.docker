# .env.docker - Environment variables for Docker deployment
# Copy this to .env and fill in your actual values

# Application
APP_ENV=production
PORT=8080

# MySQL Database Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=ecommerce_go
MYSQL_USER=ecommerce_user
MYSQL_PASSWORD=ecommerce_password

# Database Connection (using Docker service names)
DB_HOST=mysql
DB_PORT=3306
DB_USER=ecommerce_user
DB_PASSWORD=ecommerce_password
DB_NAME=ecommerce_go

# Redis (using Docker service names)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
# IMPORTANT: Generate a secure secret for production!
# Use: openssl rand -base64 32
JWT_SECRET=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-IN-PRODUCTION
ACCESS_TOKEN_MINUTES=15
REFRESH_TOKEN_DAYS=7

# AWS S3 / Cloudflare R2
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_KEY=your-access-key-id
S3_SECRET=your-secret-access-key
S3_BUCKET=your-bucket-name
S3_REGION=auto
S3_PUBLIC_URL=https://pub-xxxxx.r2.dev
